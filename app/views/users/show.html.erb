<div class="container">
<div class="row top-row">
    <div class="col-md-3 col-sm-4 col-xs-5">
        <img src="http://www.protintutah.com/wp-content/uploads/2013/07/gravatar31.jpg">
    </div>
    <div class="col-md-5 col-sm-4 col-xs-5">
        <h3><%= @user.full_name %></h3>
        <p><strong>Member Since: </strong><%= @user.created_at.strftime("%m/%d/%Y") %></p>
        <p><strong>Games Played: </strong><%= @user.scores.count %></p>
        <%  top_game_index = 0.0
            max_count = 0
        @games.each_with_index do |game, index|
            if @user.scores.where(:game_id == game.id).count > max_count
                top_game_index = index
            end
        end
        %>
        <% if top_game_index != 0 %>
        <p><strong>Favorite Game: </strong>
            <%= @games.find(top_game_index).name %></p>
            <% end %>
        <% if @user == User.current %><p><strong><%= link_to 'Edit Profile', edit_user_registration_path %></strong></p><% end %>
    </div>
    <div class="col-md-3 col-sm-4 col-xs-8">
        <%# group info when we get there %>
    </div>
</div>
</div>

<hr style="width: 100%; height: 1px; background-color:black;" />
<div class="container">
<div class = "row">
  <% @games.each do |game| %>
    <%= render partial: '/games/gamebox', locals: {game: game, big: false} %>
  <% end %>
</div>
</div>