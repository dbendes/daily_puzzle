<div class="container">
  <div class="col-md-4 col-xs-8 col-xs-offset-2 col-md-offset-4">

<%= form_for(@wikirace, html: { class: 'form-horizontal'}) do |f| %>
  <% if @wikirace.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wikirace.errors.count, "error") %> prohibited this wikirace from being saved:</h2>

      <ul>
      <% @wikirace.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :start %><br>
    <%= f.text_field :start, class: "form-control" %>
  </div>
  <div class="field form-group">
                <div class="checkbox-no-left">
                  <%= f.check_box :first_article %>
                  <%= f.label "The?" %>
                </div>
  </div>
  <div class="form-group field">
    <%= f.label :end %><br>
    <%= f.text_field :end, class: "form-control" %>
  </div>
  <div class="field form-group">
                <div class="checkbox-no-left">
                <%= f.check_box :second_article %>
                <%= f.label "The?" %>
                </div>
  </div>

  <div class="form-group field">
    <%= f.label :racedate %><br>
    <%= f.date_select :racedate, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :start_description %><br>
    <%= f.text_area :start_description, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :end_description %><br>
    <%= f.text_area :end_description, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>