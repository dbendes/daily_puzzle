<h1>Listing Scores</h1>

<table>
  <thead>
    <tr>
      <th style="width:10%">Value</th>
      <th style="width:20%">Date</th>
      <th style="width:10%">Game</th>
      <th style="width:35%">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.value %></td>
        <td><%= score.date %></td>
        <td><%= score.game_id %></td>
        <td><%= User.find(score.user_id).full_name %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

