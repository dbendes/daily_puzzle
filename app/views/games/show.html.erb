<div class="row">
    <h2 class="text-center"><%= @game.name %></h2>
    <h4><%#= link_to 'How To Play', @game.instructions %></h4>
</div>
<div class="row">

  <iframe frameborder="0" height="520" sandbox="allow-forms allow-popups allow-same-origin allow-scripts" <% if @game.id != 1 %> <%= "scrolling=yes"; %> <% else %> <%= "scrolling=no" %> <% end %> width="100%" src="<%= @game.iframe %>">
    <p>Your browser does not support iframes. Please <%= link_to 'click here', @game.iframe %> to play!</p>
  </iframe>
</div>
<div class="row">
  <%= form_for @score do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@score.errors.count, "error") %> prohibited this Score from being saved:</h2>

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </div>
  <%= f.hidden_field :game_id, :value => @game.id %>
  <%= f.hidden_field :date, :value => Date.today %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>


