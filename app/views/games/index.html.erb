<%= render 'jumbotron' %>

<p id="notice"><%= notice %></p>


<div class="row">
  <% @games.each do |game| %>
     <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <p class=""><%= game.name %></p>
        </div>
        <div class="panel-body">
          <h3><%= game.description %></h3>
          <%= link_to 'Play', game, :class => "btn btn-success" %>
        </div>
        <div class = "panel-footer">
          <h4>LEADERBOARD</h4>
          <ul>
          <% game.top3.each do |leader| %>
              <li><%= leader.user.full_name %> - <%= leader.value %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>  
  
</div>
