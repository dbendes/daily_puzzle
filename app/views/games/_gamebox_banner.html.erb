<div class="panel-body">
  <div class="well game-well">
    <h3 class="text-center">
      <% if @user == current_user %>
        <% current = true %>
      <% else %>
        <% current = false %>
      <% end %>

      <% if Score.where(:game_id => game.id).where(:user_id => @user.id).where(:date => Date.today).first %>
        <% @score = Score.where(:game_id => game.id).where(:user_id => @user.id).where(:date => Date.today).first %>


        <button class="btn btn-info disabled not-really-disabled"><% if current %>You<% else %><%= @user.first %><% end %> completed today's puzzle in </br><%= @score.format_long %>!</button>
        </h3>
      <% else %>
        <% if current %>
          <%= link_to "Try Today's Puzzle!", game, :class => "btn btn-success" %>
        <% else %>
          <button class="btn btn-info disabled not-really-disabled"><%= @user.first %> hasn't played <%= game.name %> today.</button>
        <% end %>
            </h3>

    <p class='text-center'><%= game.description %></p>
      <% end %>

  </div>

</div>
