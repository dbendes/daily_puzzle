<div role="tabpanel" class="tab-pane" id="myscores-<%= game.id %>">
          <% if game.user_ever.length > 0 %>

            <table class="table table-condensed no-margin">
              <thead>
                <tr>
                  <th style="width:35%">Type</th>
                  <th style="width:65%">Score</th>
                </tr>
              </thead>


              <tbody>
                <tr>
                    <td>Today:</td>
                    <td><% if game.user_today.length >0 %><%= game.user_today_score %><% else %><% if @user.id == User.current.id %>You haven't<% else %><%= @user.first + " hasn't"  %><% end %> played today.<% end %></td>

                </tr>
                <tr>
                    <td>This Week:</td>
                    <td><% if game.user_this_week.length >0 %><%= game.user_this_week_score %><% else %><% if @user.id == User.current.id %>You haven't<% else %><%= @user.first + " hasn't"  %><% end %> played this week.<% end %></td>
                </tr>
                <tr>
                    <td>This Year:</td>
                    <td><% if game.user_alltime_score.length > 0 %><%= game.user_alltime_score %><% else %><% if @user.id == User.current.id %>You have<% else %><%= @user.first + " has"  %><% end %> never played this game.<% end %></td>
                </tr>
              </tbody>
            </table>
          <% else %>
            <div class="alert alert-dismissible alert-info text-center">
              <% if @user.id == User.current.id %>You have never played this game - why not give it a shot?<% else %><%= @user.first + " hasn't played this game yet."  %><% end %>
            </div>
          <% end %>
</div>