<div class="container">
<div class="row top-row text-center">
    <div class="col-md-4 col-sm-4 col-xs-6 col-xs-offset-3 col-md-offset-4 col-sm-offset-4">
      <h2><%= @group.name %></h2>
      <p> <%= @users.map { |user| user.full_name }.join ', ' %>.
      </p>
      <%= form_for(@membership) do |f| %>
        <% if @membership.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>
            <ul>
            <% @membership.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="actions">
          <%= f.hidden_field :role, :value => 0 %>
          <%= f.hidden_field :group_id, :value => @group.id %>

          <%= f.submit 'Join This Group', :class => 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
</div>
</div>

<hr style="width: 100%; height: 1px; background-color:black;" />
<div class="container">
<div class = "row">
  <% @games.each do |game| %>
    <%= render partial: '/games/gamebox', locals: {game: game, big: false, tooltip: game.detailed, group_page: @group.id} %>
  <% end %>
</div>
</div>