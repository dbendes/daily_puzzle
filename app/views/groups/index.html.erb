<div class="container">
<div class="row top-row text-center">
  <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
      <h2>My Groups</h2>
    <ul class="nav nav-pills">
        <% @my_groups.each do |group| %>
          <li class="active group-list-badge">
            <%= link_to group  do %>
                    <% if group.private %>
                      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                    <% end %>
                    <%= group.name %> <span class="badge"><%= group.members %> <%= "player".pluralize(group.members) %></span>
            <% end %>
          </li>
        <% end %>
    </ul>
  </div>
  </div>
</div>
</div>
</div>
<hr style="width: 100%; height: 1px; background-color:black;" />
<div class="container">
<div class = "row text-center">

  <%= form_tag groups_path, :method => 'get', :class => "form-inline" do %>
       <div class="field form-group">
          <%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Find a Group" %>
          <button class="btn btn-success" type="submit">Search</button>
          <%= link_to 'Start a Group', new_group_path, :class => "btn btn-success" %>
      <% end %>
      </div>
</div>
</div>

<div class="container">
<div class="row top-row text-center">
  <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
    <ul class="nav nav-pills">
        <% @groups.each do |group| %>
          <li class="active group-list-badge">
            <%= link_to group  do %>
                    <% if group.private %>
                      <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                    <% end %>
                    <%= group.name %> <span class="badge"><%= group.members %> <%= "player".pluralize(group.members) %></span>
            <% end %>
          </li>
        <% end %>
    </ul>
  </div>
  </div>
</div>
</div>
</div>